{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@containers/*": ["./src/containers/*"],
      "@Components/*": ["./src/components/*"],
      "@Context/*": ["./src/context/*"],
      "@Pages/*": ["./src/pages/*"],
      "@GlobalStyles/*": ["./src/globalStyles/*"],
      "@Services/*": ["./src/services/*"],
      "@Server/*": ["./server/*"],
      "@Static/*": ["./public/static/*"],
      "@utils/*": ["./src/utils/*"],
      "@Interfaces/*": ["./src/Interfaces/*"],
      "@Layouts/*": ["./src/layouts/*"],
      "@data/*": ["./src/staticData/*"]
    }
  },
  "include": ["next-env.d.ts", "custom.d.ts", "**/*.ts", "**/*.tsx", "src/*"],
  "exclude": ["node_modules", "dist", ".next", "out", "next.config.js", ".babelrc", "bundles", "coverage", "test/*", "server/internals"]
}
